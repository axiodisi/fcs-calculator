<body>
    <div class="calculator">
        <h1>FCS Calculator</h1>
        <div class="scroll-container">
            <div class="scroll-box" id="fibSequence">
                <!-- Fibonacci sequence will be populated here -->
            </div>
            <div class="scroll-box" id="baseBets">
                <!-- Base bet amounts will be populated here -->
            </div>
        </div>
        <div id="result">Select a Fibonacci number and a base bet</div>
    </div>

    <script>
        function fibonacci(n) {
            if (n <= 1) return n;
            let a = 0, b = 1;
            for (let i = 2; i <= n; i++) {
                const temp = b;
                b = a + b;
                a = temp;
            }
            return b;
        }

        function populateFibonacciSequence() {
            const fibBox = document.getElementById('fibSequence');
            for (let i = 0; i < 50; i++) {
                const div = document.createElement('div');
                div.className = 'scroll-item';
                div.textContent = fibonacci(i);
                div.onclick = () => selectItem(div, 'fibSequence');
                fibBox.appendChild(div);
            }
        }

        function populateBaseBets() {
            const baseBets = [1, 2, 3, 4, 5, 10, 20, 25, 50, 100, 200, 500, 1000];
            const betBox = document.getElementById('baseBets');
            for (const bet of baseBets) {
                const div = document.createElement('div');
                div.className = 'scroll-item';
                div.textContent = bet;
                div.onclick = () => selectItem(div, 'baseBets');
                betBox.appendChild(div);
            }
        }

        function selectItem(item, boxId) {
            const box = document.getElementById(boxId);
            const items = box.getElementsByClassName('scroll-item');
            for (const i of items) {
                i.classList.remove('selected');
            }
            item.classList.add('selected');
            calculateBet();
        }

        function calculateBet() {
            const fibItem = document.querySelector('#fibSequence .selected');
            const betItem = document.querySelector('#baseBets .selected');
            if (fibItem && betItem) {
                const fibNumber = parseInt(fibItem.textContent);
                const baseBet = parseInt(betItem.textContent);
                const result = fibNumber * baseBet;
                document.getElementById('result').textContent = `Bet Size: $${result}`;
            }
        }

        populateFibonacciSequence();
        populateBaseBets();
    </script>
</body>
</html>
